// find the sum of all the multiples of 3 or 5 below 1000. natural numbers only. 

// 1. find all the numbers & add to array 
// 2. in same loop, calculate the sum of all items in array 

//  let multiples = [];
//  let sum= 0;

 for (let i=1;i<1000;i++){
    //check if i is a multiple of 3 or 5 
    // if yes, add to array & implement sum 
    
    if(i%3==0 || i%5==0){
        multiples.push(i);
        sum+=i;
    }
    
}

console.log(multiples);
console.log(sum);

